<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="danilbiktashev.aidadok.EndOfSymptomActivity"
    tools:showIn="@layout/activity_end_of_symptom">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Необходима консультация врача"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/endText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:text="asfsdfs"
            android:layout_weight="1.00"
            android:scrollbars="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/emiacButton"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:textSize="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/black_button"
                android:text="Перейти в ЕМИАС"
                android:textColor="@android:color/white"
                android:onClick="emiacButtonPressed"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
